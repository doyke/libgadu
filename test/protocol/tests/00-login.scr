#-----------------------------------------------------------------------------
# Successful login
#-----------------------------------------------------------------------------
login (uin = 1, password = "")
expect connect
send (01 00 00 00, auto, 12 34 56 78)
expect data (31 00 00 00, auto, xx*138)
send (03 00 00 00, auto)
expect event GG_EVENT_CONN_SUCCESS
logoff
expect disconnect

